{
  "name": "voice-server",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch --env-file=../.env.development src/server.ts",
    "build": "bun build src/server.ts --target bun --outfile dist/server.js",
    "start": "bun --env-file=../.env.production ./dist/server.js",
    "db:generate": "bun --env-file=../.env.development drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "bun --env-file=../.env.development drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "bun --env-file=../.env.development drizzle-kit studio --config=drizzle.config.ts --verbose"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.6.1",
    "jsonwebtoken": "^9.0.3",
    "postgres": "^3.4.8",
    "resend": "^6.7.0",
    "socket.io": "^4.8.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "drizzle-kit": "^0.31.8",
    "socket.io-client": "^4.8.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "license": "MIT"
}
