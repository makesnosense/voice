meta {
  name: refresh
  type: http
  seq: 3
}

post {
  url: https://localhost:3003/api/auth/refresh
  body: json
  auth: inherit
}

body:json {
  {
    "refreshToken": "{{voiceRefreshToken}}"
  }
}

script:post-response {
  const response = res.getBody();
  if (response && response.accessToken) {
    bru.setVar("voiceAccessToken", response.accessToken);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
